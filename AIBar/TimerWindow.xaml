<Window
    x:Class="AIBar.TimerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Timer">
    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>
    <Grid Padding="20">
        <Ellipse Stroke="DarkGray" StrokeThickness="3" Width="143" Height="143" />

        <Path x:Name="TimerPath" Stroke="{ThemeResource SystemAccentColor}" StrokeThickness="10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" />

        <TextBlock x:Name="TimerText" Text="00:01:00" 
                   FontSize="32" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>